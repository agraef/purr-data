    if {$shift == 1} {
        if {$key == "q" || $key == "Q"} {menu_really_quit}
		if { $k12_mode == 0 } {
		    if {$key == "l" || $key == "L"} {menu_clear_console}
		    if {$key == "r" || $key == "R"} {menu_toggle_console}
			if {$key == "E"} {menu_tooltips $topname}
			if {$key == "Return"} {pdtk_zoom_reset $topname}
